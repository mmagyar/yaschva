{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch trial Program",
      "program": "${workspaceFolder}/es6/trial.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },

    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },

   {
    "type": "node",
    "request": "launch",
    "name": "Debug AVA test file",
    "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
    "outputCapture": "std",
    "skipFiles": [
      "<node_internals>/**/*.js",
      "node_modules/ava/**"
    ]
  }
]
}
