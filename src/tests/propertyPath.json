[
  {
    "name": "can describe a path through nested objects",
    "schema": {
      "topObject": {
        "aProperty": "string",
        "bProperty": "number"
      },
      "path": {
        "$propertyPath": {}
      }
    },
    "validData": [
      {
        "topObject": {
          "aProperty": "hello",
          "bProperty": 4
        },
        "path": []
      },
      {
        "topObject": {
          "aProperty": "hello",
          "bProperty": 4
        },
        "path": [
          "topObject"
        ]
      },
      {
        "topObject": {
          "aProperty": "hello",
          "bProperty": 4
        },
        "path": [
          "topObject",
          "aProperty"
        ]
      },
      {
        "topObject": {
          "aProperty": "hello",
          "bProperty": 4
        },
        "path": [
          "topObject",
          "bProperty"
        ]
      }
    ],
    "invalidData": [
      {
        "path": [
          "aProperty"
        ]
      },
      {
        "topObject": {
          "aProperty": "hello",
          "bProperty": 4
        },
        "path": [
          "aProperty"
        ]
      },
      {
        "topObject": {
          "aProperty": "hello",
          "bProperty": 4
        },
        "path": [
          "topObject",
          "aProperty",
          "hello"
        ]
      }
    ]
  },
  {
    "name": "Optional properties only count as valid path if the are present in the data structure",
    "schema": {
      "topObject": {
        "aProperty": "string",
        "bProperty": [
          "?",
          "number"
        ],
        "xProp": [
          "?",
          {
            "zProp": "string",
            "yProp": {
              "qProp": "number"
            }
          }
        ]
      },
      "path": {
        "$propertyPath": {}
      }
    },
    "validData": [
      {
        "topObject": {
          "aProperty": "hello",
          "bProperty": 4
        },
        "path": [
          "topObject",
          "bProperty"
        ]
      },
      {
        "topObject": {
          "aProperty": "hello",
          "bProperty": 4,
          "xProp": {
            "zProp": "string",
            "yProp": {
              "qProp": 3
            }
          }
        },
        "path": [
          "topObject",
          "xProp",
          "yProp",
          "qProp"
        ]
      }
    ],
    "invalidData": [
      {
        "topObject": {
          "aProperty": "hello"
        },
        "path": [
          "topObject",
          "bProperty"
        ]
      },
      {
        "topObject": {
          "aProperty": "you"
        },
        "path": [
          "topObject",
          "xProp"
        ]
      }
    ]
  },
  {
    "name": "can be used on map",
    "schema": {
      "oneProp": {
        "mePath": {
          "$propertyPath": {}
        }
      },
      "someOther": "string",
      "andAnother": ["?",{
        "withNested": ["?",{
          "objects": ["?", "number"]
        }]
      }]
    },
    "validData": [
      {
        "oneProp": {
          "mePath": [
            "andAnother",
            "withNested",
            "objects"
          ]
        },
        "someOther": "asdf",
        "andAnother": {
          "withNested": {
            "objects": 4
          }
        }
      }
    ]
}
]