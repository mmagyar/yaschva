{
  "name": "yaschva",
  "version": "2.7.0",
  "description": "Yet another schema validation",
  "keywords": [
    "schema",
    "validation",
    "type",
    "typescript",
    "json"
  ],
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmagyar/yaschva.git"
  },
  "scripts": {
    "prepack": "npm run build && npm run build:commonjs",
    "build": "tsc",
    "watch": "tsc --watch",
    "build:commonjs": "tsc --module \"CommonJS\" -t \"es6\" --outDir \"./cjs\"",
    "clean:test": "jest --clearCache",
    "watch:test": "jest --watchAll",
    "eslint": "eslint **/*.ts",
    "eslint:fix": "eslint --fix  **/*.ts",
    "standard": "eslint **/*.ts",
    "test": "npm run build && npm run test:coverage",
    "test:coverage": "c8 --all --exclude \"{**/*.spec.*,**/*.d.ts,cjs/**,coverage/**}\"  --reporter=text --reporter=html --reporter=json --reporter=clover ava --verbose",
    "test:fast": "ava",
    "test:watch": "tsc-watch --onSuccess \"c8 --all --exclude \\\"{**/*.spec.*,**/*.d.ts,cjs/**,coverage/**}\\\" --reporter=text-summary --reporter=clover --reporter=json ava\"",
    "test:watchOne": "tsc-watch --onSuccess \"c8 --all --exclude \\\"{**/*.spec.*,**/*.d.ts,cjs/**,coverage/**}\\\" --reporter=text ava --match \\\"Can handle multiple type for a single value\\\" \""
  },
  "author": "mmagyar.com",
  "license": "MIT",
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": 0,
      "@typescript-eslint/restrict-template-expressions": 0
    }
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "ava": "^3.15.0",
    "c8": "^7.6.0",
    "eslint": "^7.13.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "randexp": "^0.5.3"
  },
  "ava": {
    "files": [
      "!cjs"
    ]
  }
}
