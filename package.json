{
  "name": "yaschva",
  "version": "2.7.0",
  "description": "Yet another schema validation",
  "keywords": [
    "schema",
    "validation",
    "type",
    "typescript",
    "json"
  ],
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmagyar/yaschva.git"
  },
  "scripts": {
    "prepack": "npm run build && npm run build:commonjs",
    "build": "tsc",
    "watch": "tsc --watch",
    "build:commonjs": "tsc --module \"CommonJS\" -t \"es6\" --outDir \"./cjs\"",
    "clean:test": "jest --clearCache",
    "watch:test": "jest --watchAll",
    "standard": "standardx **/*.ts",
    "standard:fix": "standardx --fix **/*.ts",
    "test": "npm run build && npm run test:coverage",
    "test:coverage": "c8 --all --exclude \"{**/*.spec.*,**/*.d.ts,cjs/**,coverage/**}\"  --reporter=text --reporter=html --reporter=json --reporter=clover ava --verbose",
    "test:fast": "ava",
    "test:watch": "tsc-watch --onSuccess \"c8 --all --exclude \\\"{**/*.spec.*,**/*.d.ts,cjs/**,coverage/**}\\\" --reporter=text-summary --reporter=clover --reporter=json ava\"",
    "test:watchOne": "tsc-watch --onSuccess \"c8 --all --exclude \\\"{**/*.spec.*,**/*.d.ts,cjs/**,coverage/**}\\\" --reporter=text ava --match \\\"Can handle multiple type for a single value\\\" \""
  },
  "author": "mmagyar.com",
  "license": "MIT",
  "standardx": {
    "env": [
      "es6"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "no-use-before-define": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/semi": [
        "error",
        "never"
      ]
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/cjs"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "ava": "^3.12.1",
    "c8": "^7.3.0",
    "jest": "^26.4.2",
    "standardx": "^5.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "randexp": "^0.5.3"
  },
  "ava": {
    "files": [
      "!cjs"
    ]
  }
}
