{
  "name": "yaschva",
  "version": "2.0.3",
  "description": "Yet another schema validation",
  "keywords": [
    "schema",
    "validation",
    "type",
    "typescript",
    "json"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "prepublish": "tsc",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmagyar/yaschva.git"
  },
  "scripts": {
    "build": "tsc",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "test": "tsc && jest",
    "clean:test": "jest --clearCache",
    "standard": "standardx **/*.ts",
    "standard:fix": "standardx --fix **/*.ts",
    "test:coverage": "tsc && npm run standard && jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": "mmagyar.com",
  "license": "MIT",
  "standardx": {
    "env": [
      "jest",
      "es6"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "babel": {
    "sourceMaps": "both",
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/dist"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "jest": "^26.3.0",
    "standardx": "^5.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "randexp": "^0.5.3"
  }
}
