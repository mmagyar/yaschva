{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "outDir": "./dist",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strict": true,
    "declaration": true,
    "inlineSources": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "rootDirs": [
      "./src"
    ],
    "paths": {},
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "es2016",
      "es2018",
      "es2019",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
    ]
}
